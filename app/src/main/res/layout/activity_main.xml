<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textMayor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="549dp"
        android:gravity="center"
        android:text="Mayor de 3"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txfN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="470dp"
        android:ems="10"
        android:inputType="number"
        android:text="INGRESE NUMERO 1" />

    <EditText
        android:id="@+id/txfN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="405dp"
        android:ems="10"
        android:inputType="number"
        android:text="INGRESE NUMERO 2" />

    <Button
        android:id="@+id/btnMayor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="229dp"
        android:onClick="onClick"
        android:text="MAYOR" />

    <EditText
        android:id="@+id/txfN3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="348dp"
        android:ems="10"
        android:inputType="number"
        android:text="INGRESE NUMERO 3" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="53dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="308dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/textOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="313dp"
        android:gravity="center"
        android:text="El Num Mayor Es:"
        android:textColor="@color/black" />


</RelativeLayout>